@model TicketPeru.Models.RegisterViewModel

<style>
    .settingSection .settingContent .form-control {
        width: 100%;
    }
</style>

<style>
    .btn-primary {
        color: #fff;
        background-color: #173863;
        border-color: #173863;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #232629;
            border-color: #232629;
        }
</style>


<!-- ACCOUNT SETTINGS SECTION -->
<section class="settingSection">
    <div class="container">
        <div class="row">
            <div class="col-md-3 hidden-xs hidden-sm"></div>
            <div class="col-md-6 col-xs-12 col-sm-12">
                <div class="settingContent bg-ash text-center" style="padding: 20px;">
                    <h4><i class="fa fa-address-card-o" style="color:#262a2e;" aria-hidden="true"></i>&nbsp;Registro</h4>
                    <div class="row text-center">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })<br />
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control", @placeholder = "Nombres" })
                            </div>
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", @placeholder = "Apellidos" })
                            </div>
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.Documento, new { @class = "form-control", @placeholder = "DNI" })
                            </div>
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @type = "Email" })
                            </div>
                            <div class="col-sm-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                            </div>
                            <div class="col-sm-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar Contraseña" })
                            </div>
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-block btn-primary" style="width: 100%;">Registrarse</button>
                            </div>
                        }
                    </div>
                    &nbsp;
                    <div>
                        <p style="text-align: justify; font-size: 13px; color: #969696; text-transform: none;">
                            En Ticketperu estamos comprometidos con el adecuado manejo de los datos
                            personales de todos nuestros clientes. Respetamos y cuidamos la confidencialidad de la
                            información a través de nuestras idóneas herramientas tecnológicas para su
                            almacenamiento y buen uso en cumplimiento del régimen de protección de datos personales
                            (Ley 29733 del 2011 y demás normas que la modifiquen, complementen o sustituyan).
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 hidden-xs hidden-sm"></div>
        </div>
    </div>
</section>